<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header_pesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/garis_pemisah1"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="2dp"
        android:layout_below="@id/header_pesanan"
        android:background="@color/grey"/>
    <LinearLayout
        android:id="@+id/pick_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/garis_pemisah1"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup"
            android:layout_marginRight="128dp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_del"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:layout_marginLeft="16dp"
            android:hint="Baru"
            android:background="@drawable/btn_tag"/>
        <Button
            android:layout_width="81dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:hint="Diproses"
            android:background="@drawable/btn_tag"/>
        <Button
            android:layout_width="104dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:hint="Selesai"
            android:background="@drawable/btn_tag"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvtransaksi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>