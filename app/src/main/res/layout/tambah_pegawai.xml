<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Tambah Pegawai"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/grey"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_input_pegawai"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Nama Pegawai"
            android:inputType="textEmailAddress" />
        <EditText
            android:hint="Jabatan"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Pilih Kategori"
            android:inputType="textEmailAddress" />

        <EditText
            android:hint="Hak Akses"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="No. HandPhone (Wajib)"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pin 6 Angka"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:hint="000000"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/form_style"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="105dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outlet"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <Button
            android:hint="Pilih Outlet"
            android:textColorHint="@color/black"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style2"/>
        <Button
            android:hint="Simpan"
            android:textColorHint="@color/white"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"/>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>