<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMerchant">

    <LinearLayout
        android:id="@+id/daftar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="24dp"
            android:text="Daftar"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/garis_pemisah1"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:layout_below="@id/daftar_back"
        android:background="@color/grey"/>


    <LinearLayout
        android:id="@+id/form1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/garis_pemisah1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="3dp"
            android:textStyle="normal"
            android:text="Halo, silahkan isi data kamu dengan lengkap ya."
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Data Usaha"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Nama Usaha"
            android:inputType="text"/>

        <EditText
            android:hint="Pilih Tipe Bisnis"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/form_style"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down"
            android:drawableRight="@drawable/ic_keyboard_arrow_down"/>

    </LinearLayout>
    <RelativeLayout

        android:id="@+id/garis_pemisah2"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="5dp"
        android:layout_below="@id/form1"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/garis_pemisah2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Data Usaha"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Nama Usaha"
            android:inputType="text"/>
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="No. Handphone"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Pin 6 Digit"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/form_style"
            android:fontFamily="@font/poppins"
            android:hint="Email (Optional)"
            android:inputType="textEmailAddress"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/btn_style"
            app:backgroundTint="@null"
            android:hint="Daftar"
            android:textSize="16sp"
            android:textColorHint="@color/white" />
    </LinearLayout>
</RelativeLayout>